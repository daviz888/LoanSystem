@model LoanSystem.WebUI.Models.CustomerListViewModel

@{
    ViewBag.Title = "CustomerList";
}

<h3>CustomerList</h3>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
            <tr>
                <td><a href=@Url.Action("Edit", "Customer", new { item.CustomerID })
                       class="text-center">
                        @item.CustomerID.ToString("D8")
                    </a>
                </td>
                @*<td>@item.CustomerID.ToString("D8")</td>*@
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.Zip</td>
                <td>
                    <a href=@Url.Action("Delete", "Customer", new { item.CustomerID })
                       class="text-center text-danger">
                        Delete
                    </a>
                   @* <input type="submit" class="btn btn-danger btn-sx" value="Delete" />*@
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
